{
  "name": "asteria-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/main/main.ts",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:main": "ts-node --transpile-only src/main/main.ts",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.json --outDir dist",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck",
    "test": "vitest run --coverage",
    "test:ui": "vitest run src/renderer --coverage"
  },
  "dependencies": {
    "electron": "^30.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.6",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "concurrently": "^9.0.1",
    "jsdom": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.2",
    "vitest": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4"
  }
}
