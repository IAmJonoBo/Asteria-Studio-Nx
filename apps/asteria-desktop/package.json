{
  "name": "asteria-desktop",
  "version": "0.1.0",
  "description": "Asteria Studio desktop app.",
  "author": "Jonathan Botha",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": "24.13.1"
  },
  "scripts": {
    "dev": "concurrently \"pnpm:dev:renderer\" \"pnpm:dev:main\"",
    "dev:renderer": "vite --config vite.config.ts --port 5173 --strictPort",
    "dev:main": "pnpm run build:main && pnpm run build:preload && node scripts/run-electron-dev.mjs",
    "prebuild": "node scripts/ensure-electron.mjs",
    "build": "pnpm run build:renderer && pnpm run build:main && pnpm run build:preload && pnpm run build:launcher",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.build.json",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=cjs --external:electron --outfile=dist/preload/index.cjs",
    "build:launcher": "node scripts/create-launcher.mjs",
    "build:verify": "node scripts/verify-build.mjs",
    "typecheck": "tsc --noEmit",
    "format": "pnpm -w format",
    "format:write": "pnpm -w format:write",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "test": "node scripts/run-vitest.mjs run --coverage",
    "test:ui": "node scripts/run-vitest.mjs run src/renderer --coverage",
    "test:e2e": "playwright test",
    "benchmark:run": "ts-node --transpile-only scripts/run-benchmark.ts",
    "pipeline:run": "ts-node --transpile-only scripts/run-pipeline.ts",
    "pipeline:export": "ts-node scripts/export-normalized.ts",
    "golden:generate": "ts-node --transpile-only scripts/run-golden-generator.ts",
    "golden:bless": "ts-node --transpile-only scripts/bless-golden.ts",
    "golden:test": "node scripts/run-vitest.mjs run --config vitest.golden.config.ts",
    "vendor:sharp": "node scripts/vendor-sharp.mjs",
    "package": "pnpm run build && pnpm run vendor:sharp && pnpm exec electron-builder install-app-deps && electron-builder",
    "package:verify": "node scripts/verify-package.mjs",
    "dist": "pnpm run build && pnpm run vendor:sharp && pnpm exec electron-builder install-app-deps && electron-builder --publish=never"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/archiver": "^7.0.0",
    "@types/node": "^25.2.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "esbuild": "^0.27.0",
    "electron-builder": "^26.7.0",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^28.0.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "ssim.js": "^3.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  },
  "ts-node": {
    "esm": true,
    "preferTsExts": true,
    "experimentalSpecifierResolution": "node"
  },
  "build": {
    "appId": "studio.asteria.app",
    "productName": "Asteria Studio",
    "directories": {
      "output": "dist-app"
    },
    "afterSign": "scripts/notarize.mjs",
    "icon": "resources/icons/icon.png",
    "asarUnpack": [
      "**/*.node",
      "node_modules/sharp/**",
      "node_modules/@img/**"
    ],
    "files": [
      "dist/**",
      "package.json",
      "node_modules/**"
    ],
    "extraResources": [
      {
        "from": "resources/sample-corpus",
        "to": "sample-corpus"
      }
    ],
    "asar": true,
    "mac": {
      "icon": "resources/icons/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "target": "dmg"
    },
    "win": {
      "icon": "resources/icons/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "resources/icons/icon.png",
      "target": "AppImage"
    }
  }
}
