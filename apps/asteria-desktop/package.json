{
  "name": "asteria-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/main/main.ts",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:renderer\" \"pnpm:dev:main\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:main": "ts-node --transpile-only src/main/main.ts",
    "build": "pnpm run build:renderer && pnpm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.json --outDir dist",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --coverage",
    "test:ui": "vitest run src/renderer --coverage",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "electron": "^35.7.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.12.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^25.0.1",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
