{
  "name": "asteria-desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:renderer\" \"pnpm:dev:main\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:main": "ts-node --transpile-only src/main/main.ts",
    "build": "pnpm run build:renderer && pnpm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --coverage",
    "test:ui": "vitest run src/renderer --coverage",
    "test:e2e": "playwright test",
    "pipeline:run": "ts-node --transpile-only scripts/run-pipeline.ts",
    "pipeline:export": "ts-node scripts/export-normalized.ts",
    "package": "pnpm run build && electron-builder",
    "dist": "pnpm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "electron": "^40.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "studio.asteria.app",
    "productName": "Asteria Studio",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
