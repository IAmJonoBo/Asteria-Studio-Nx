{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "asteria-desktop",
  "projectType": "application",
  "sourceRoot": "apps/asteria-desktop/src",
  "tags": [
    "scope:desktop",
    "type:app"
  ],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm lint"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm format"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm typecheck"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/apps/asteria-desktop/coverage"
      ],
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm test"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/apps/asteria-desktop/dist",
        "{workspaceRoot}/apps/asteria-desktop/dist-app"
      ],
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm build"
      }
    },
    "build:main": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/apps/asteria-desktop/dist/main"
      ],
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm build:main"
      }
    },
    "build:verify": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm build:verify"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm test:e2e"
      }
    },
    "golden": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/.golden-artifacts"
      ],
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm golden:test"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm package"
      }
    },
    "package:verify": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm package:verify"
      }
    },
    "e2e:review-pane": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm test:e2e -- review-pane.spec.ts"
      }
    },
    "quality-gate:review-pane": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/asteria-desktop",
        "command": "pnpm test -- src/renderer/screens/ReviewQueueScreen.test.tsx src/renderer/ReviewQueue.keyboard.test.tsx && pnpm test:e2e -- review-pane.spec.ts"
      }
    }
  }
}
