{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@asteria/ui-kit",
  "projectType": "library",
  "sourceRoot": "packages/ui-kit/src",
  "tags": ["scope:ui", "type:lib"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/ui-kit/dist"],
      "options": {
        "cwd": "packages/ui-kit",
        "command": "pnpm build"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/ui-kit",
        "command": "pnpm lint"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/ui-kit",
        "command": "pnpm test"
      }
    }
  }
}
