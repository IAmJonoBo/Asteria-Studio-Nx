{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AsteriaPageLayout",
  "type": "object",
  "required": ["pageId", "source", "dimensions", "dpi", "elements", "normalization", "metrics"],
  "properties": {
    "pageId": { "type": "string", "description": "Stable page identifier" },
    "source": {
      "type": "object",
      "required": ["path", "checksum"],
      "properties": {
        "path": { "type": "string" },
        "checksum": { "type": "string", "description": "SHA256" },
        "pageIndex": { "type": "integer", "minimum": 0 }
      }
    },
    "dimensions": {
      "type": "object",
      "required": ["width", "height", "unit"],
      "properties": {
        "width": { "type": "number" },
        "height": { "type": "number" },
        "unit": { "type": "string", "enum": ["mm", "cm", "in"] }
      }
    },
    "dpi": { "type": "integer", "minimum": 72 },
    "normalization": {
      "type": "object",
      "properties": {
        "skewAngle": { "type": "number", "description": "Degrees clockwise" },
        "dpiSource": {
          "type": "string",
          "enum": ["metadata", "inferred", "fallback"],
          "description": "Source of DPI/physical size"
        },
        "warp": {
          "type": "object",
          "properties": {
            "method": { "type": "string" },
            "residual": { "type": "number" }
          }
        },
        "pageMask": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4,
          "description": "[x0,y0,x1,y1] mask bounds in output pixels"
        },
        "cropBox": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4,
          "description": "[x0,y0,x1,y1] in output pixels"
        },
        "scale": { "type": "number" },
        "bleed": { "type": "number", "description": "Bleed in output units" },
        "trim": { "type": "number", "description": "Trim in output units" },
        "shadow": {
          "type": "object",
          "properties": {
            "present": { "type": "boolean" },
            "side": { "type": "string", "enum": ["left", "right", "top", "bottom", "none"] },
            "widthPx": { "type": "number" },
            "confidence": { "type": "number" },
            "darkness": { "type": "number" }
          }
        },
        "shading": {
          "type": "object",
          "properties": {
            "method": { "type": "string" },
            "backgroundModel": { "type": "string" },
            "spineShadowModel": { "type": "string" },
            "params": { "type": "object" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "guides": {
          "type": "object",
          "properties": {
            "baselineGrid": {
              "type": "object",
              "properties": {
                "spacingPx": { "type": "number" },
                "offsetPx": { "type": "number" },
                "angleDeg": { "type": "number" },
                "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
                "source": { "type": "string", "enum": ["auto", "user"] }
              }
            }
          }
        }
      }
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "bbox", "confidence"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "page_bounds",
              "text_block",
              "title",
              "running_head",
              "folio",
              "ornament",
              "drop_cap",
              "footnote",
              "marginalia"
            ]
          },
          "bbox": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 4,
            "maxItems": 4,
            "description": "[x0,y0,x1,y1] in output pixels"
          },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "text": { "type": "string", "description": "Optional OCR snippet" },
          "notes": { "type": "string" },
          "flags": { "type": "array", "items": { "type": "string" } },
          "source": { "type": "string", "description": "local|remote|ensemble" }
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "deskewConfidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "warpScore": { "type": "number" },
        "layoutScore": { "type": "number" },
        "processingMs": { "type": "integer", "minimum": 0 },
        "maskCoverage": { "type": "number" },
        "shadowScore": { "type": "number" },
        "backgroundStd": { "type": "number" },
        "backgroundMean": { "type": "number" },
        "illuminationResidual": { "type": "number" },
        "spineShadowScore": { "type": "number" },
        "baseline": {
          "type": "object",
          "properties": {
            "medianSpacingPx": { "type": "number" },
            "spacingMAD": { "type": "number" },
            "lineStraightnessResidual": { "type": "number" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "peaksY": {
              "type": "array",
              "items": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        }
      }
    },
    "bookModel": {
      "type": "object",
      "properties": {
        "trimBoxPx": {
          "type": "object",
          "properties": {
            "median": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 4,
              "maxItems": 4
            },
            "dispersion": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 4,
              "maxItems": 4
            }
          }
        },
        "contentBoxPx": {
          "type": "object",
          "properties": {
            "median": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 4,
              "maxItems": 4
            },
            "dispersion": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 4,
              "maxItems": 4
            }
          }
        },
        "runningHeadTemplates": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "bbox": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 4,
                "maxItems": 4
              },
              "hash": { "type": "string" },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        },
        "folioModel": {
          "type": "object",
          "properties": {
            "positionBands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "side": { "type": "string", "enum": ["left", "center", "right"] },
                  "band": {
                    "type": "array",
                    "items": { "type": "number" },
                    "minItems": 2,
                    "maxItems": 2
                  },
                  "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
                }
              }
            },
            "numeralStyle": { "type": "string" },
            "ocrConfidenceSummary": {
              "type": "object",
              "properties": {
                "mean": { "type": "number" },
                "median": { "type": "number" },
                "p90": { "type": "number" }
              }
            }
          }
        },
        "ornamentLibrary": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hash": { "type": "string" },
              "bbox": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 4,
                "maxItems": 4
              },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        },
        "baselineGrid": {
          "type": "object",
          "properties": {
            "dominantSpacingPx": { "type": "number" },
            "spacingMAD": { "type": "number" },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        }
      }
    },
    "decisions": {
      "type": "object",
      "properties": {
        "accepted": { "type": "boolean" },
        "notes": { "type": "string" },
        "overrides": { "type": "array", "items": { "type": "string" } },
        "overrideAppliedAt": { "type": "string", "format": "date-time" }
      }
    },
    "adjustments": {
      "type": "object",
      "description": "User adjustments captured during review",
      "properties": {
        "rotationDelta": { "type": "number", "description": "Degrees clockwise applied by reviewer" },
        "cropOffsets": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4,
          "description": "[dx0,dy0,dx1,dy1] crop offsets in output pixels"
        },
        "trimOffsets": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 4,
          "maxItems": 4,
          "description": "[dx0,dy0,dx1,dy1] trim offsets in output pixels"
        },
        "elementEdits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "action": { "type": "string", "enum": ["add", "update", "remove"] },
              "elementId": { "type": "string" },
              "before": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "type": { "type": "string" },
                  "bbox": {
                    "type": "array",
                    "items": { "type": "number" },
                    "minItems": 4,
                    "maxItems": 4
                  },
                  "confidence": { "type": "number" },
                  "text": { "type": "string" },
                  "notes": { "type": "string" },
                  "flags": { "type": "array", "items": { "type": "string" } },
                  "source": { "type": "string" }
                }
              },
              "after": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "type": { "type": "string" },
                  "bbox": {
                    "type": "array",
                    "items": { "type": "number" },
                    "minItems": 4,
                    "maxItems": 4
                  },
                  "confidence": { "type": "number" },
                  "text": { "type": "string" },
                  "notes": { "type": "string" },
                  "flags": { "type": "array", "items": { "type": "string" } },
                  "source": { "type": "string" }
                }
              }
            }
          }
        },
        "appliedAt": { "type": "string", "format": "date-time" },
        "source": { "type": "string", "enum": ["review"] }
      }
    },
    "overrides": {
      "type": "object",
      "description": "Per-page override values that replace pipeline outputs"
    },
    "version": { "type": "string", "description": "Schema version" }
  }
}
