{
  "name": "asteria-studio",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "node tools/bootstrap.mjs",
    "sync:node-version": "node tools/sync-node-version.mjs",
    "upgrade:stack": "node tools/upgrade-stack.mjs",
    "trunk:check": "trunk check",
    "trunk:fmt": "trunk fmt",
    "nx": "node tools/nx/run.mjs",
    "nx:graph": "node tools/nx/run.mjs graph",
    "affected:lint": "node tools/nx/run.mjs affected -t lint",
    "affected:test": "node tools/nx/run.mjs affected -t test",
    "affected:build": "node tools/nx/run.mjs affected -t build",
    "dev": "pnpm -C apps/asteria-desktop dev",
    "lint": "pnpm -C apps/asteria-desktop lint",
    "format": "pnpm -C apps/asteria-desktop format",
    "format:check": "pnpm format",
    "format:write": "pnpm -C apps/asteria-desktop format:write",
    "test": "pnpm -C apps/asteria-desktop test",
    "test:e2e": "pnpm -C apps/asteria-desktop test:e2e",
    "typecheck": "pnpm -C apps/asteria-desktop typecheck",
    "build": "pnpm -C apps/asteria-desktop build",
    "build:app": "pnpm -C apps/asteria-desktop build",
    "build:verify": "pnpm -C apps/asteria-desktop build:verify",
    "package": "pnpm -C apps/asteria-desktop package",
    "package:verify": "pnpm -C apps/asteria-desktop package:verify",
    "package:full": "pnpm package && pnpm package:verify",
    "pipeline:run": "pnpm -C apps/asteria-desktop pipeline:run",
    "pipeline:export": "pnpm -C apps/asteria-desktop pipeline:export",
    "benchmark:run": "pnpm -C apps/asteria-desktop benchmark:run",
    "golden:generate": "pnpm -C apps/asteria-desktop golden:generate",
    "golden:bless": "pnpm -C apps/asteria-desktop golden:bless",
    "golden:test": "pnpm -C apps/asteria-desktop golden:test",
    "preflight": "node tools/preflight/run-preflight.mjs",
    "ci:lint": "node tools/nx/run.mjs affected -t lint",
    "ci:test": "node tools/nx/run.mjs affected -t test",
    "ci:build": "node tools/nx/run.mjs affected -t build",
    "ci:trunk": "node tools/quality/check-trunk.mjs",
    "ci:knip": "pnpm exec knip --config knip.json",
    "ci:ipc": "node tools/quality/check-orphan-ipc.mjs",
    "ci:catch": "node tools/quality/check-empty-catch.mjs",
    "ci:zip": "node tools/quality/check-release-artifacts.mjs",
    "ci:quality": "pnpm trunk:check && pnpm format && pnpm lint && pnpm typecheck && pnpm build && pnpm build:verify && pnpm test",
    "ci:e2e": "pnpm test:e2e",
    "ci:desktop": "pnpm build && pnpm build:verify && pnpm package:full",
    "validate": "pnpm ci:quality",
    "validate:fix": "pnpm trunk:fmt && pnpm format:write && pnpm ci:quality",
    "validate:affected": "pnpm affected:lint && pnpm affected:test && pnpm affected:build",
    "hooks:setup": "git config core.hooksPath .githooks"
  },
  "packageManager": "pnpm@10.29.1",
  "engines": {
    "node": "24.11.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "9.39.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "knip": "5.83.0",
    "nx": "22.4.5",
    "typescript-eslint": "8.54.0"
  }
}
